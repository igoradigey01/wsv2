{
  "name": "index-layout",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/index-layout/src",
  "prefix": "wsv2",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/index-layout/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/index-layout/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/index-layout/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/index-layout/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/index-layout/**/*.ts",
          "libs/index-layout/**/*.html"
        ]
      }
    }
  },
  "tags":  ["scope:01index-layout-lib", "type:01-lib"]
}
